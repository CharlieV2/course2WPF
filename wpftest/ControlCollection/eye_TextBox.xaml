<UserControl x:Class="wpftest.ControlCollection.eye_TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpftest.ControlCollection"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="180">
    <Grid>
        <Rectangle 
            x:Name="rectangle"
            Stroke="Gray" 
            RadiusY="10" RadiusX="10" Fill="White"/>

        <TextBox 
            x:Name="Content"
            Text="eye"
            MaxLength="15"
            FontFamily="Segoe UI Light"
            FontSize="15"
            TextAlignment="Center"
            TextWrapping="NoWrap"
            BorderThickness="0" Background="{x:Null}"
            GotFocus="Content_GotFocus"
            LostFocus="Content_LostFocus" BorderBrush="#FFABABAB"/>




    </Grid>
</UserControl>
